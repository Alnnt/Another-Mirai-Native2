<UserControl
    x:Class="Another_Mirai_Native.UI.Controls.ChatAvatar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="clr-namespace:Another_Mirai_Native.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Another_Mirai_Native.UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="50"
    Height="50"
    d:DataContext="{d:DesignInstance Type=local:ChatAvatar}"
    mc:Ignorable="d">
    <Border
        x:Name="Container"
        ClipToBounds="True"
        CornerRadius="500"
        RenderOptions.BitmapScalingMode="HighQuality">
        <Grid>
            <TextBlock
                x:Name="FallbackDisplay"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
        </Grid>
    </Border>
</UserControl>
